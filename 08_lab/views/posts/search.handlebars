
    <h1>Shows Found</h1>
    <h2>Here are the list of shows found for the search:</h2> <h2 id="searchterm">{{shows.searchterm}}</h2> 

    <section>
        <article class="shows">
        {{#if shows.length}}
        <ul>
        {{#each shows}}
                <li>
                    <a href="/show/{{show.id}}">{{show.name}}</a>
                </li>
        {{/each}}
        </ul>
        {{else}}
            <p class="show-not-found">We're sorry, but no results were found for {{shows.searchterm}}.</p>
        {{/if}}

        </article>
    </section>
